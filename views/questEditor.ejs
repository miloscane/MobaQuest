<%- include ("partials/header") -%>
	<div class="questEditorWrap">
		<div class="questionNumbersWrap">
			<ul id="question-numbers-list"></ul>
			<div class="button addQuestion" onclick="addQuestion()">+</div>
		</div>
		<div class="titleWrap">
			<div class="text">Quest Title: </div>
			<div class="inputWrap"><input type="text" id="title"></div>
		</div>
		<form method="POST" action="/test" enctype="multipart/form-data" id="form">
			<div id="questions-wrap"></div>
			<input type="text" id="quest-json" name="questjson" style="display:none">
			<div onclick="submitQuest()">Submit</div>
		</form>
	</div>
	<div id="question-template" style="display:none">
		<div class="questionWorth" style="margin-bottom:10px">
			<div style="display:inline-block;">Question worth:</div> 
			<div style="display:inline-block;width:50px"><input type="number" class="questionWorthInput" max="100" min="0"></div>
			<div style="display:inline-block;">% out of 100%</div>
		</div>
		<div class="questionButtonsWrap">
			<div class="button deleteQuestion" onclick="removeQuestion(this)">Delete Question</div>
		</div>
		<div class="title">Question text:</div>
		<textarea class="questionText"></textarea>

		<div class="title">Select Question Type:</div>
		<div class="questionTypeButtonsWrap">
			<div class="button" onclick="setQuestionType(this)">
				<div class="text">A</div>
				<div class="info">
					<img src="/info.png">
					<div class="tooltip">True-False text</div>
				</div>
			</div>
			<div class="button" onclick="setQuestionType(this)">
				<div class="text">B</div>
				<div class="info">
					<img src="/info.png">
					<div class="tooltip">True-False Pick on Image</div>
				</div>
			</div>
			<div class="button" onclick="setQuestionType(this)">
				<div class="text">C</div>
				<div class="info">
					<img src="/info.png">
					<div class="tooltip">True-False Pick on Image</div>
				</div>
			</div>
			<div class="button" onclick="setQuestionType(this)">
				<div class="text">D</div>
				<div class="info">
					<img src="/info.png">
					<div class="tooltip">True-False Pick on Image</div>
				</div>
			</div>
			<div class="button" onclick="setQuestionType(this)">
				<div class="text">E</div>
				<div class="info">
					<img src="/info.png">
					<div class="tooltip">True-False Pick on Image</div>
				</div>
			</div>
			<div class="button" onclick="setQuestionType(this)">
				<div class="text">F</div>
				<div class="info">
					<img src="/info.png">
					<div class="tooltip">True-False Pick on Image</div>
				</div>
			</div>
		</div>
		<div class="questionTypes">
			<div class="questionType">
				<div class="title">True False-text</div>
				<div class="answersWrap"></div>
				<div class="button addAnswerButton" onclick="addAnswer(this)">Add an answer</div>
			</div>
			<div class="questionType">
				<div class="title">True False-image</div>
				<div class="imageWrap">
					<img src="/imagePlaceholder.jpg" class="image">
				</div>
				<input type="file" class="image2" onchange="imageUploaded(this)">
				<div class="button addAnswerButton" onclick="addAnswer(this)">Add an answer</div>
			</div>
			<div class="questionType">
				<div class="title">Reorder actions</div>
				<div class="answersWrap"></div>
				<div class="button addAnswerButton" onclick="addAnswer(this)">Add an action</div>
			</div>
			<div class="questionType">
				<div class="title">Connect Answers</div>
				<div class="answersWrap"></div>
				<div class="button addAnswerButton" onclick="addAnswer(this)">Add a pair</div>
			</div>
			<div class="questionType">
				<div class="title">Tap on image and add description</div>
				<div class="imageWrap">
					<img src="/imagePlaceholder.jpg" class="image">
				</div>
				<input type="file" class="image5" onchange="imageUploaded(this)">
				<div class="answersWrap"></div>
				<div class="button addAnswerButton" onclick="addAnswer(this)">Add an answer</div>
			</div>
			<div class="questionType">
				<div class="title">Write a story</div>
				<div style="text-align:left;margin-top:15px;">Write a correct story in the textbox bellow which will be showed after the quest has ended</div>
				<textarea class="correctStory" name="story"></textarea>
			</div>
		</div>
	</div>
	<script src="/html-modules/questEditorScript.js"></script>
<%- include ("partials/footer") -%>